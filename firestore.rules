rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
      return userDoc().data.role;
    }

    function isAdmin() {
      return isSignedIn() && userRole() == 'admin';
    }

    function isAmbassador() {
      return isSignedIn() && userRole() == 'ambassador';
    }

    function isJournalist() {
      return isSignedIn() && userRole() == 'journalist';
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
      allow delete: if false;
    }

    match /heroes/{heroId} {
      allow read: if isSignedIn();
      allow create: if isAmbassador();
      allow update: if isAdmin()
        || (isAmbassador() && resource.data.ambassadorId == request.auth.uid)
        || (isJournalist() && request.resource.data.journalistId == request.auth.uid);
      allow delete: if false;
    }

    match /stories/{storyId} {
      allow read: if isSignedIn();
      allow create: if isJournalist();
      allow update: if isAdmin()
        || (isJournalist() && resource.data.journalistId == request.auth.uid);
      allow delete: if false;
    }

    match /aiContent/{contentId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}
